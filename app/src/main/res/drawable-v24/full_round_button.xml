<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/creamish_white"/>
            <corners android:radius="1000dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <ripple android:color="#fff">
            <item>
                <shape>
                    <gradient android:endColor="@color/gradient_color2" android:startColor="@color/gradient_color1" />
                    <corners android:radius="1000dp" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>