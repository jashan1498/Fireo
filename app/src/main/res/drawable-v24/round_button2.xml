<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:endColor="@color/card_bg" android:startColor="@color/gradient_color2" />
            <corners android:radius="40dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <ripple android:color="#fff">
            <item>
                <shape>
                    <gradient android:endColor="@color/gradient_color2" android:startColor="@color/gradient_color1" />
                    <corners android:radius="40dp" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>